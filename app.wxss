@import "./styles/iconfont.wxss";

/* 在微信小程序中是不支持通配符的 '*' */
page,view,text,swiper,swiper-item,image,navigator{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* 主题颜色通过变量来实现
    1 less中是存在变量这个知识的
    2 原生css和wxss也是支持变量的
*/

page{
    /* 定义主题颜色 */
    --themeColor:#eb4450;
    /* 定义统一字体大小 假设设计稿大小是375px
        1px = 2rpx
        14px = 27rpx
    */
    font-size: 28rpx;
}

image{
    width: 100%;
}